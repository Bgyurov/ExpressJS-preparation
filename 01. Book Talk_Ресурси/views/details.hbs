

    <section class="details-page">
        <h1>Details</h1>
        <article class="details-card">

            <article class="details-card-text">
                <h2>Title:<br>{{bookReview.title}}</h2>
                <h3>Author: {{bookReview.author}}</h3>
                <h3>Stars: {{bookReview.stars}}</h3>
                <h3>Genre: {{bookReview.genre}}</h3>
                <h3>Review: {{bookReview.review}}
                </h3>

                <!-- If there is no registered user, do not display buttons-->
                {{#if isAuthenticated}}
                <div class="buttons">
                    <!-- Only for registered user and author of the review -->
                    {{#if isOwner}}
                    <a href="/edit/{{bookReview._id}}" class="btn-edit">Edit</a>
                    <a href="/delete/{{bookReview._id}}" class="btn-delete">Delete</a>
                    {{else}}
                    {{#if isWished}}
                    <!-- logged in user who has not yet wished book-->
                    <p class="wish-pub">You already added the book to your wish list</p>
                    <!-- logged in user who has already wished book-->
                    {{else}}
                    <a href="/wish/{{bookReview._id}}" class="btn-wish">Wish to read</a>
                    {{/if}}
                    {{/if}}
                </div>
                {{/if}}

            </article>

            <article class="details-card-image">
                <img src="{{bookReview.image}}">
            </article>

        </article>
    </section>

