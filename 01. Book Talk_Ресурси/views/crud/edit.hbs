

    <section class="edit-form-container">

        <form method="POST">
            <h3>Edit Book Review</h3>
            <label>Title</label>
            <input type="text" name="title" class="box" value="{{bookReview.title}}" id="title">
            <label>Author</label>
            <input type="text" name="author" class="box" value="{{bookReview.author}}" id="author">
            <label>Genre</label>
            <input type="text" name="genre" class="box" value="{{bookReview.genre}}" id="genre">
            <label>Stars</label>
            <input type="number" name="stars" class="box" value="{{bookReview.stars}}" id="stars">
            <label>Image</label>
            <input type="text" name="image" class="box" value="{{bookReview.image}}" id="image">
            <label>Review</label>
            <textarea class="box"
                name="review">{{bookReview.review}}</textarea>
            <input type="submit" value="Edit" class="btn">
        </form>
    </section>
