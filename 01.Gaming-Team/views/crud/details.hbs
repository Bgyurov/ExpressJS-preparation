

    <main id="details">
        <section id="details-info">
            <div class="game-image">
                <img src="{{gameOverview.image}}">
            </div>

            <div class="game-info">
                <div class="game-text">
                    <h1 id="name">{{gameOverview.name}}</h1>
                    <h3 id="platform">Platform: {{gameOverview.platform}}</h3>
                    <p id="price"><span>Price: ${{gameOverview.price}}</span></p>
                    <p id="genre"><span>Genre: {{gameOverview.genre}}</span></p>
                    <p id="description">{{gameOverview.description}}</p>
                </div>
                    {{#if isAuthenticated}}
                <div class="product-btn">
                    <!--Only for registered user and author of the publication -->
                    {{#if isOwner}}
                    <div class="author">
                        <a href="/edit/{{gameOverview._id}}" class="btn-edit">Edit</a>
                        <a href="/delete/{{gameOverview._id}}" class="btn-delete">Delete</a>
                    </div>
                    {{else}}
                    {{#if isBoughtBy}}
                     <p class="buy-message">You have already bought this game</p> 
                    {{else}}
                    <a href="/buy/{{gameOverview._id}}" class="btn-buy">Buy</a> 
                    {{/if}}


                    <!-- Logged in user who has already buy this game code-->
                    {{/if}}
                </div>
                {{/if}}
            </div>
        </section>
    </main>

    