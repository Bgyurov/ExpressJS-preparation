

        <main>
            <section id="details-page">
                <h1>Details</h1>
                <article class="details-card">

                    <article class="details-card-text">
                        <h2>Title:<br> {{art.title}}</h2>
                        <h3>Author: {{authorName}}</h3>
                        <h3>Painting technique: {{art.paintTech}}</h3>
                        <h3>Certificate of authenticity: {{art.cetificateAuth}}</h3>

                        <!-- If there is no registered user, do not display buttons-->
                        {{#if isAuthenticated}}
                        <div class="buttons">
                            <!-- Only for registered user and author of the publication -->
                            {{#if isOwner}}
                            <a href="/edit/{{art._id}}" class="btn-edit">Edit</a>
                            <a href="/delete/{{art._id}}" class="btn-delete">Delete</a>
                            {{else}}
                            {{#if isShare}}
                            <!-- logged in user who has already shared the publication-->
                            <p class="shared-pub">You already shared this publication</p>
                            {{else}}
                            <!-- logged in user who has not yet shared the publication-->
                            <a href="/share/{{art._id}}" class="btn-share">Share publication</a>
                            {{/if}}
                            {{/if}}
                        </div>
                        {{/if}}

                    </article>

                    <article class="details-card-image">
                        <img src={{art.artPicture}} alt="art-image2">
                    </article>

                </article>
            </section>
        </main>